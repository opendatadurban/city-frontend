{% from "city/components/back-link/macro.njk" import cityBackLink %}
{% from "city/components/button/macro.njk" import cityButton %}
{% from "city/components/date-input/macro.njk" import cityDateInput %}
{% from "city/components/error-summary/macro.njk" import cityErrorSummary %}

{% extends "layouts/examples.njk" %}

{% block beforeContent %}
  {{ cityBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block content %}
<form action="/" method="post">

  {{ cityErrorSummary({
    "titleText": "Message to alert the user to a problem goes here",
    "descriptionText": "Optional description of the errors and how to correct them",
    "classes": "optional-extra-class",
    "errorList": [
      {
        "text": "Date of birth must include a month and year",
        "href": "#dob-month"
      }
    ]
  }) }}

  {{ cityDateInput({
    id: 'dob',
    name: 'dob',
    fieldset: {
      legend: {
        text: 'What is your date of birth?',
        isPageHeading: true,
        classes: 'city-fieldset__legend--xl'
      }
    },
    hint: {
      text: 'For example 5 12 1987'
    },
    items:[
      {
        name: 'day',
        classes: 'city-input--width-2',
        value: '22'
      },
      {
        name: 'month',
        classes: 'city-input--width-2 city-input--error'
      },
      {
        name: 'year',
        classes: 'city-input--width-4 city-input--error'
      }
    ],
    errorMessage: {
      text: "Date of birth must include a month and year"
    }
    })
  }}

  {{ cityButton({
    "text": "Continue"
  }) }}

</form>
{% endblock %}

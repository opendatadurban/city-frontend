{% from "city/components/back-link/macro.njk" import cityBackLink %}
{% from "city/components/button/macro.njk" import cityButton %}
{% from "city/components/date-input/macro.njk" import cityDateInput %}
{% from "city/components/error-summary/macro.njk" import cityErrorSummary %}
{% from "city/components/input/macro.njk" import cityInput %}

{% extends "layouts/examples.njk" %}

{% block beforeContent %}
  {{ cityBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block content %}
<form action="/" method="post">

  {{ cityErrorSummary({
    "titleText": "Message to alert the user to a problem goes here",
    "descriptionText": "Optional description of the errors and how to correct them",
    "classes": "optional-extra-class",
    "errorList": [
      {
        "text": "You must provide your passport number",
        "href": "#passport-number"
      },
      {
        "text": "You must provide your expiry date",
        "href": "#expiry-month"
      }
    ]
  }) }}

  <h1 class="city-heading-xl">Passport details</h1>

  {{ cityInput({
    label: {
      text: "Passport number",
      classes: "city-label--m"
    },
    hint: {
      text: "For example, 502135326"
    },
    id: "passport-number",
    name: "passport-number",
    errorMessage: {
      "text": "You must provide your passport number"
    }
  }) }}

  {{ cityDateInput({
    fieldset: {
      legend: {
        text: 'Expiry date',
        classes: 'city-fieldset__legend--m'
      }
    },
    hint: {
      text: 'For example, 08 2014'
    },
    id: 'expiry',
    name: 'expiry',
    items:[
      {
        name: 'month',
        classes: 'city-input--width-2 city-input--error'
      },
      {
        name: 'year',
        classes: 'city-input--width-4 city-input--error'
      }
    ],
    errorMessage: {
      "text": "Enter your expiry date"
    }
    })
  }}

  {{ cityButton({
    "text": "Continue"
  }) }}

</form>
{% endblock %}

{% extends "layouts/examples.njk" %}

{% from "city/components/back-link/macro.njk" import cityBackLink %}
{% from "city/components/checkboxes/macro.njk" import cityCheckboxes %}
{% from "city/components/fieldset/macro.njk" import cityFieldset %}
{% from "city/components/radios/macro.njk" import cityRadios %}
{% from "city/components/input/macro.njk" import cityInput %}

{% block beforeContent %}
  {{ cityBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block content %}

<div class="city-grid-row">
  <div class="city-grid-column-two-thirds">

    {% set emailHtml %}
    {{ cityInput({
      id: "contact-by-email",
      name: "contact-by-email",
      type: "email",
      spellcheck: false,
      classes: "city-!-width-one-third",
      label: {
        text: "Email address"
      }
    }) }}
    {% endset -%}

    {% set phoneHtml %}
    {{ cityInput({
      id: "contact-by-phone",
      name: "contact-by-phone",
      type: "tel",
      classes: "city-!-width-one-third",
      label: {
        text: "Phone number"
      }
    }) }}
    {% endset -%}

    {% set textHtml %}
    {{ cityInput({
      id: "contact-by-text",
      name: "contact-by-text",
      type: "tel",
      classes: "city-!-width-one-third",
      label: {
        text: "Mobile phone number"
      }
    }) }}
    {% endset -%}

    <a class="city-link" href="#">Focusable element</a>

    {{ cityCheckboxes({
      idPrefix: "contact",
      name: "contact",
      fieldset: {
        legend: {
          text: "How would you like to be contacted?",
          isPageHeading: true,
          classes: "city-fieldset__legend--l"
        }
      },
      hint: {
        text: "Select all options that are relevant to you."
      },
      items: [
        {
          value: "email",
          text: "Email",
          conditional: {
            html: emailHtml
          }
        },
        {
          value: "phone",
          text: "Phone",
          conditional: {
            html: phoneHtml
          }
        },
        {
          value: "text message",
          text: "Text message",
          conditional: {
            html: textHtml
          }
        }
      ]
    }) }}

    {% set emailHtml %}
    {{ cityInput({
      id: "radio-email",
      name: "contact-by-email",
      type: "email",
      spellcheck: false,
      classes: "city-!-width-one-third",
      label: {
        text: "Email address"
      }
    }) }}
    {% endset -%}

    {% set phoneHtml %}
    {{ cityInput({
      id: "radio-phone",
      name: "contact-by-phone",
      type: "tel",
      classes: "city-!-width-one-third",
      label: {
        text: "Phone number"
      }
    }) }}
    {% endset -%}

    {% set textHtml %}
    {{ cityInput({
      id: "radio-text",
      name: "contact-by-text",
      type: "tel",
      classes: "city-!-width-one-third",
      label: {
        text: "Mobile phone number"
      }
    }) }}
    {% endset -%}

    <a class="city-link" href="#">Focusable element</a>

    {{ cityRadios({
      idPrefix: "radio-contact",
      name: "contact",
      fieldset: {
        legend: {
          text: "How would you prefer to be contacted?",
          isPageHeading: true,
          classes: "city-fieldset__legend--l"
        }
      },
      hint: {
        text: "Select one option."
      },
      items: [
        {
          value: "email",
          text: "Email",
          conditional: {
            html: emailHtml
          }
        },
        {
          value: "phone",
          text: "Phone",
          conditional: {
            html: phoneHtml
          }
        },
        {
          value: "text",
          text: "Text message",
          conditional: {
            html: textHtml
          }
        }
      ]
    }) }}

    <hr class="city-section-break city-section-break--l">

    {% call cityFieldset({
      legend: {
        text: "Which colours do you like?",
        classes: "city-fieldset__legend--l"
      }
    })%}

      <h2 class="city-heading-m">Primary colours</h2>

      {{ cityCheckboxes({
        idPrefix: "colour-primary",
        name: "colour",
        items: [
          {
            value: "red",
            text: "Red"
          },
          {
            value: "yellow",
            text: "Yellow",
            conditional: {
              html: '<p class="city-body">Orange is much nicer than yellow!</p>'
            }
          },
          {
            value: "blue",
            text: "Blue"
          }
        ]
      }) }}

      <h2 class="city-heading-m">Secondary colours</h2>

      {{ cityCheckboxes({
        idPrefix: "colour-secondary",
        name: "colour",
        items: [
          {
            value: "green",
            text: "Green"
          },
          {
            value: "purple",
            text: "Purple"
          },
          {
            value: "orange",
            text: "Orange",
            conditional: {
              html: '<p class="city-body">I like orange too!</p>'
            }
          }
        ]
      }) }}

      <h2 class="city-heading-m">Other colours</h2>

      {{ cityCheckboxes({
        idPrefix: "colour-other",
        name: "colour",
        items: [
          {
            value: "imaginary",
            text: "An imaginary colour"
          },
          {
            divider: "or"
          },
          {
            value: "none",
            text: "None of the above",
            behaviour: "exclusive"
          }
        ]
      }) }}

    {% endcall %}

    <hr class="city-section-break city-section-break--l">

    {% call cityFieldset({
      legend: {
        text: "Which colour is your favourite?",
        classes: "city-fieldset__legend--l"
      }
    })%}

      <h2 class="city-heading-m">Primary colours</h2>

      {{ cityRadios({
        idPrefix: "fave-primary",
        name: "fave",
        items: [
          {
            value: "red",
            text: "Red"
          },
          {
            value: "yellow",
            text: "Yellow",
            conditional: {
              html: '<p class="city-body">Orange is much nicer than yellow!</p>'
            }
          },
          {
            value: "blue",
            text: "Blue"
          }
        ]
      }) }}

      <h2 class="city-heading-m">Secondary colours</h2>

      {{ cityRadios({
        idPrefix: "fave-secondary",
        name: "fave",
        items: [
          {
            value: "green",
            text: "Green"
          },
          {
            value: "purple",
            text: "Purple"
          },
          {
            value: "orange",
            text: "Orange",
            conditional: {
              html: '<p class="city-body">Orange is my favourite colour!</p>'
            }
          }
        ]
      }) }}

      <h2 class="city-heading-m">Other colours</h2>

      {{ cityRadios({
        idPrefix: "fave-other",
        name: "fave",
        items: [
          {
            value: "imaginary",
            text: "An imaginary colour"
          },
          {
            divider: "or"
          },
          {
            value: "none",
            text: "None of the above",
            behaviour: "exclusive"
          }
        ]
      }) }}

    {% endcall %}

  </div>
</div>
{% endblock %}

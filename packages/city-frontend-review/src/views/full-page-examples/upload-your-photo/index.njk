{# This example is based of the live "Passport" service: https://www.passport.service.gov.uk/photo/upload #}
{% extends "layouts/full-page-example.njk" %}

{% from "city/components/phase-banner/macro.njk" import cityPhaseBanner %}
{% from "city/components/back-link/macro.njk" import cityBackLink %}
{% from "city/components/radios/macro.njk" import cityRadios %}
{% from "city/components/error-summary/macro.njk" import cityErrorSummary %}
{% from "city/components/checkboxes/macro.njk" import cityCheckboxes %}
{% from "city/components/button/macro.njk" import cityButton %}
{% from "city/components/file-upload/macro.njk" import cityFileUpload %}

{% set pageTitle = example.title %}
{% block pageTitle %}{{ "Error: " if errorSummary | length }}{{ pageTitle }} - GOV.UK{% endblock %}

{% block header %}
  {{ cityHeader({
    serviceName: "Apply for a passport",
    navigation: [
        {
            href: "/",
            text: "Home"
        },
        {
            href: "#upload-a-photo",
            text: "Upload a photo",
            active: true
        }
    ]
  }) }}
{% endblock %}

{% block beforeContent %}
  {{ cityPhaseBanner({
    tag: {
      text: "Beta"
    },
    html: 'This is a new service – your <a class="city-link" href="#">feedback</a> will help us to improve it.'
  }) }}
  {{ cityBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block content %}
  <div class="city-grid-row">
    <div class="city-grid-column-two-thirds">
        <form method="post" novalidate>
            {% if errorSummary | length %}
              {{ cityErrorSummary({
                titleText: "There is a problem",
                errorList: errorSummary
              }) }}
            {% endif %}

            <h1 class="city-heading-xl">{{ pageTitle }}</h1>

            <p class="city-body">
                Your photo will now go through an automated check.
            </p>

            <p class="city-body">
                You’ll need to review it before you add the photo to your application.
            </p>

            {{ cityFileUpload({
                id: "photo",
                name: "photo",
                label: {
                    text: "Upload your photo"
                },
                hint: {
                    text: "Your photo must be at least 50KB and no more than 10MB"
                },
                errorMessage: errors["photo"]
            }) }}

            {{ cityCheckboxes({
                idPrefix: "terms-and-conditions",
                name: "terms-and-conditions",
                items: [
                    {
                        value: "true",
                        html: 'I accept the <a class="city-link" href="#">terms and conditions</a>'
                    }
                ],
                values: values["terms-and-conditions"],
                errorMessage: errors["terms-and-conditions"]
            }) }}

            {{ cityButton({
                text: "Submit your photo"
            }) }}
        </form>
    </div>
  </div>
{% endblock %}

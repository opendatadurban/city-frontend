{% from "../../macros/attributes.njk" import cityAttributes -%}

{% set visuallyHiddenText = params.visuallyHiddenText | default("Error") -%}
{% set errorMessageText = params.html | safe | trim | indent(2) if params.html else params.text -%}

<p {%- if params.id %} id="{{ params.id }}"{% endif %} class="city-error-message {%- if params.classes %} {{ params.classes }}{% endif %}"
  {{- cityAttributes(params.attributes) }}>
  {% if visuallyHiddenText %}
  <span class="city-visually-hidden">{{ visuallyHiddenText }}:</span> {{ errorMessageText }}
  {% else %}
  {{ errorMessageText }}
  {% endif %}
</p>

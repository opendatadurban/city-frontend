{% from "../../macros/attributes.njk" import cityAttributes -%}

<div class="city-warning-text {%- if params.classes %} {{ params.classes }}{% endif %}"
  {{- cityAttributes(params.attributes) }}>
  <span class="city-warning-text__icon" aria-hidden="true">!</span>
  <strong class="city-warning-text__text">
    <span class="city-visually-hidden">{{ params.iconFallbackText | default("Warning", true) }}</span>
    {{ params.html | safe if params.html else params.text }}
  </strong>
</div>

{% from "../../macros/attributes.njk" import cityAttributes %}

{%- macro _tabListItem(params, item, index) %}
{% set tabPanelId = item.id if item.id else idPrefix + "-" + index -%}
<li class="city-tabs__list-item {%- if index == 1 %} city-tabs__list-item--selected{% endif %}">
  <a class="city-tabs__tab" href="#{{ tabPanelId }}"
    {{- cityAttributes(item.attributes) }}>
    {{ item.label }}
  </a>
</li>
{% endmacro -%}

{%- macro _tabPanel(params, item, index) %}
{% set tabPanelId = item.id if item.id else idPrefix + "-" + index -%}
<div class="city-tabs__panel {%- if index > 1 %} city-tabs__panel--hidden{% endif %}" id="{{ tabPanelId }}"
  {{- cityAttributes(item.panel.attributes) }}>
{% if item.panel.html %}
  {{ item.panel.html | safe | trim | indent(2) }}
{% elif item.panel.text %}
  <p class="city-body">{{ item.panel.text }}</p>
{% endif %}
</div>
{% endmacro -%}

{#- If an id 'prefix' is not passed, fall back to using the name attribute
  instead. We need this for error messages and hints as well -#}
{% set idPrefix = params.idPrefix if params.idPrefix -%}

<div {%- if params.id %} id="{{ params.id }}"{% endif %} class="city-tabs {%- if params.classes %} {{ params.classes }}{% endif %}"
  {{- cityAttributes(params.attributes) }} data-module="city-tabs">
  <h2 class="city-tabs__title">
    {{ params.title | default ("Contents") }}
  </h2>
{% if params.items | length %}
  <ul class="city-tabs__list">
    {% for item in params.items %}
      {% if item %}
        {{- _tabListItem(params, item, loop.index) | trim | indent(4, true) }}
      {% endif %}
    {% endfor %}
  </ul>
  {% for item in params.items %}
    {% if item %}
      {{- _tabPanel(params, item, loop.index) | trim | indent(2, true) }}
    {% endif %}
  {% endfor %}
{% endif %}
</div>

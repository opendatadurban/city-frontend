{% from "../../macros/attributes.njk" import cityAttributes %}
{% from "../../macros/i18n.njk" import cityI18nAttributes %}

{%- macro _accordionItem(params, item, index) %}
  {%- set headingLevel = params.headingLevel if params.headingLevel else 2 %}
  <div class="city-accordion__section {%- if item.expanded %} city-accordion__section--expanded{% endif %}">
    <div class="city-accordion__section-header">
      <h{{ headingLevel }} class="city-accordion__section-heading">
        <span class="city-accordion__section-button" id="{{ params.id }}-heading-{{ index }}">
          {{ item.heading.html | safe | trim | indent(8) if item.heading.html else item.heading.text }}
        </span>
      </h{{ headingLevel }}>
      {% if item.summary.html or item.summary.text %}
      <div class="city-accordion__section-summary city-body" id="{{ params.id }}-summary-{{ index }}">
        {{ item.summary.html | safe | trim | indent(8) if item.summary.html else item.summary.text }}
      </div>
      {% endif %}
    </div>
    <div id="{{ params.id }}-content-{{ index }}" class="city-accordion__section-content">
    {% if item.content.html %}
      {{ item.content.html | safe | trim | indent(6) }}
    {% elif item.content.text %}
      <p class="city-body">
        {{ item.content.text | trim | indent(8) }}
      </p>
    {% endif %}
    </div>
  </div>
{% endmacro -%}

<div class="city-accordion {%- if params.classes %} {{ params.classes }}{% endif %}" data-module="city-accordion" id="{{ params.id }}"
  {{- cityI18nAttributes({
    key: 'hide-all-sections',
    message: params.hideAllSectionsText
  }) -}}

  {{- cityI18nAttributes({
    key: 'hide-section',
    message: params.hideSectionText
  }) -}}

  {{- cityI18nAttributes({
    key: 'hide-section-aria-label',
    message: params.hideSectionAriaLabelText
  }) -}}

  {{- cityI18nAttributes({
    key: 'show-all-sections',
    message: params.showAllSectionsText
  }) -}}

  {{- cityI18nAttributes({
    key: 'show-section',
    message: params.showSectionText
  }) -}}

  {{- cityI18nAttributes({
    key: 'show-section-aria-label',
    message: params.showSectionAriaLabelText
  }) -}}

  {%- if params.rememberExpanded !== undefined %} data-remember-expanded="{{ params.rememberExpanded | escape }}"{% endif %}
  {{- cityAttributes(params.attributes) }}>
  {% for item in params.items %}
    {% if item %}{{ _accordionItem(params, item, loop.index) }}{% endif %}
  {% endfor %}
</div>
